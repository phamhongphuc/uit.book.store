{
    "files.exclude": {
        "**/.vscode": true,
        "**/node_modules": true,
        "**/.sass-cache": true,
        "render": true,
        "dist": true,
        "coverage": true,
        ".nyc_output": true
    },
    "eslint.enable": true,
    "eslint.options": {
        "configFile": ".eslintrc.json"
    },
    "eslint.validate": [
        "javascript",
        {
            "language": "vue",
            "autoFix": true
        }
    ],
    "git.ignoreLimitWarning": true,
    "node-module-intellisense.modulePaths": ["${workspaceRoot}/script/modules"]
}
